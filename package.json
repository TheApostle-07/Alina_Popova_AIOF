{
  "name": "alina-popova-membership",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next .next-dev .next-prod",
    "dev": "mkdir -p .tmp && TMPDIR=$PWD/.tmp NEXT_DIST_DIR=.next-dev-${npm_config_port:-3000} next dev --port ${npm_config_port:-3000}",
    "build": "mkdir -p .tmp && TMPDIR=$PWD/.tmp next build",
    "start": "mkdir -p .tmp && TMPDIR=$PWD/.tmp next start",
    "lint": "mkdir -p .tmp && TMPDIR=$PWD/.tmp next lint",
    "typecheck": "tsc --noEmit",
    "typecheck:e2e": "tsc --noEmit -p tsconfig.e2e.json",
    "seed": "tsx scripts/seed.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "load:artillery:baseline": "artillery run tests/load/artillery/baseline.yml",
    "load:artillery:smoke": "artillery run tests/load/artillery/smoke.yml",
    "load:artillery:spike": "artillery run tests/load/artillery/spike.yml",
    "load:artillery:stress": "artillery run tests/load/artillery/stress.yml",
    "load:artillery:soak": "artillery run tests/load/artillery/soak.yml",
    "load:artillery:hot": "artillery run tests/load/artillery/hot-endpoints.yml",
    "load:k6": "k6 run tests/load/k6/membership-load.js",
    "security:audit": "npm audit --audit-level=high",
    "ci:check": "npm run typecheck && npm run lint && npm run build"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jose": "^5.9.6",
    "lucide-react": "^0.473.0",
    "mongoose": "^8.9.4",
    "next": "^15.5.12",
    "nodemailer": "^8.0.1",
    "razorpay": "^2.9.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "artillery": "^2.0.23",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.5.12",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
